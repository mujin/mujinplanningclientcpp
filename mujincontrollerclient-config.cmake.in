if( MSVC )
get_filename_component(MujinPlanningClient_ROOT_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set( MujinPlanningClient_INCLUDE_DIRS "@MujinPlanningClient_INCLUDE_DIR@;${MujinPlanningClient_ROOT_DIR}/include")
else()
get_filename_component(_PREFIX "${CMAKE_CURRENT_LIST_FILE}" PATH)
get_filename_component(_PREFIX "${_PREFIX}" PATH)
get_filename_component(_PREFIX "${_PREFIX}" PATH)
get_filename_component(MujinPlanningClient_ROOT_DIR "${_PREFIX}" PATH)
set( MujinPlanningClient_INCLUDE_DIRS "${MujinPlanningClient_ROOT_DIR}/include")
endif()

if( MSVC )
  # in order to prevent DLL hell, each of the DLLs have to be suffixed with the major version and msvc prefix
  if( MSVC70 OR MSVC71 )
    set(MSVC_PREFIX "vc70")
  elseif( MSVC80 )
    set(MSVC_PREFIX "vc80")
  elseif( MSVC90 )
    set(MSVC_PREFIX "vc90")
  else()
    set(MSVC_PREFIX "vc100")
  endif()
  set(MujinPlanningClient_LIBRARY_SUFFIX "@MUJINPLANNINGCLIENT_VERSION_MAJOR@.@MUJINPLANNINGCLIENT_VERSION_MINOR@-${MSVC_PREFIX}-mt" CACHE STRING "the suffix for the mujin client libraries" FORCE)
else()
  set(MujinPlanningClient_LIBRARY_SUFFIX "@MUJINPLANNINGCLIENT_LIBRARY_SUFFIX@" CACHE STRING "the suffix for the mujin client libraries" FORCE)
endif()
  
set( MujinPlanningClient_CXX_FLAGS "-DMUJINPLANNINGCLIENT_DLL @MUJINPLANNINGCLIENT_EXPORT_CXXFLAGS@ @MUJINPLANNINGCLIENT_LOG4CXX_INCLUDE_DIRS@" )
if( WIN32 )
  set( MujinPlanningClient_CXX_FLAGS "${MujinPlanningClient_CXX_FLAGS} -DBOOST_ALL_DYN_LINK -DBOOST_ALL_NO_LIB")
endif()
if( MSVC )
  set( MujinPlanningClient_CXX_FLAGS "${MujinPlanningClient_CXX_FLAGS} /EHc-")
endif()
set( MujinPlanningClient_LINK_FLAGS "@MUJINPLANNINGCLIENT_LOG4CXX_LIB_DIRS@" )
set( MujinPlanningClient_LIBRARY_DIRS "${MujinPlanningClient_ROOT_DIR}/lib@LIB_SUFFIX@")
set( MujinPlanningClient_LIBRARIES mujinplanningclient${MujinPlanningClient_LIBRARY_SUFFIX} @LOG4CXX_LIBRARIES@)

set( MujinPlanningClient_Boost_VERSION "@Boost_MAJOR_VERSION@.@Boost_MINOR_VERSION@")

if( WIN32 )
  # search for the boost version was compiled with
  set(Boost_USE_MULTITHREAD ON)
  set(Boost_USE_STATIC_LIBS OFF)
  set(Boost_USE_STATIC_RUNTIME OFF)
  find_package(Boost ${MujinPlanningClient_Boost_VERSION} EXACT COMPONENTS thread date_time)
  if(Boost_VERSION AND NOT "${Boost_VERSION}" STREQUAL "0")
    set( MujinPlanningClient_INCLUDE_DIRS "${MujinPlanningClient_INCLUDE_DIRS}" ${Boost_INCLUDE_DIRS})
    set( MujinPlanningClient_LIBRARY_DIRS "${MujinPlanningClient_LIBRARY_DIRS}" ${Boost_LIBRARY_DIRS})
  else(Boost_VERSION AND NOT "${Boost_VERSION}" STREQUAL "0")
    message(WARNING "Failed to find Boost ${MujinPlanningClient_Boost_VERSION} necessary MujinPlanningClient")
  endif(Boost_VERSION AND NOT "${Boost_VERSION}" STREQUAL "0")
endif( WIN32 )

mark_as_advanced(
  MujinPlanningClient_ROOT_DIR
  MujinPlanningClient_CXX_FLAGS
  MujinPlanningClient_LINK_FLAGS
  MujinPlanningClient_INCLUDE_DIRS
  MujinPlanningClient_LIBRARY_DIRS
  MujinPlanningClient_LIBRARIES
  MujinPlanningClient_Boost_VERSION
)
